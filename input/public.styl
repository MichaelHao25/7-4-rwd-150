.w{max-width: 1340px;width: 100%;margin: 0 auto;}
body{
	font-size: 100%;
}


.header
	max-width 1920px
	width 100%
	margin 0 auto
	img
		width 100%
		display block
.main
	color #000000
	max-width 1700px
	width 100%
	box-sizing border-box
	padding 70px 15px 0
	margin 0 auto
	h1
		padding-bottom 10px
		font-size 68px
		line-height 78px
		text-align center
		@media(max-width 768px)
			padding-bottom 20px
			font-size 30px
			line-height 40px
	p
		font-size 26px
		line-height 88px
		@media(max-width 768px)
			font-size 20px
			line-height 30px
	.pic-cloumns
		padding-top 70px
		.pic
			box-sizing border-box
			&.w47
				width 47%
				@media(max-width 768px)
					width 100%
			&.w53
				width 53%
				@media(max-width 768px)
					width 100%
					padding-top 15px
			img
				display block
				width 100%